# oneliner with relative/absolute date
alias gl1="git log --color=always --graph --pretty=tformat:'%C(bold yellow)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gl1a="git log --color=always --graph --pretty=tformat:'%C(bold yellow)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=absolute"

alias gits="git status"
alias gitd="git diff"
alias gitp="git push"
alias gita="git add . && git commit --amend && git push -f"
